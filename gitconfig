[user]
    name = matrumz
    email = matrumz@hotmail.com
[core]
    editor = vim
    autocrlf = false
    # Don't consider trailing space change as a cause for merge conflicts
    whitespace = -trailing-space
[status]
    # Recursively traverse untracked directories to display all contents
    showUntrackedFiles = all
[pull]
    ff = only
[push]
    default = simple
[merge]
    ff = only
[grep]
    extendedRegexp = true
[alias]
    ignore = "!f() { echo \"$1\" >> .gitignore; }; f"
    ls-tracked = "ls-files --exclude-from=.gitignore"
    ls-untracked = "ls-files --exclude-from=.gitignore --others"
    s = status
    squash = git rebase -i
    stash-all = stash push --include-untracked
    tree = log --graph --oneline --all --pretty=format:'%C(auto)%h -%C(auto)%d %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)'
